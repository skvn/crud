{% import "crud::crud.fields.macro" as controls %}
<div data-widget="editable_table">
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th colspan="{{ input.config.fields|length+1 }}">
                {% include 'crud::crud/fields/label.twig' %}
            </th>
        </tr>
        <tr>
            {% for c in input.getControls() %}
                <th>{{ c.config.title }}</th>
            {% endfor %}
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for r in input.getValue() %}
            <tr>
                {% for c in input.getControls(r) %}
                    <td>
                        {{ controls.control(c) }}
                    </td>
                {% endfor %}
                <td>
                    <a href="" data-rel="add" data-click="crud_action" data-action="send_dates_add_row" style="display: none;"><i class="fa fa-plus"></i></a>
                    <a href="" data-rel="del" data-click="crud_action" data-action="send_dates_delete_row" style="display: none;"><i style="color: red;" class="fa fa-remove"></i></a>
                </td>
            </tr>
        {% endfor %}
        <tr>
            {% for c in input.getControls() %}
            <td>
                {{ controls.control(c) }}
            </td>
            {% endfor %}
            <td>
                <a href="" data-rel="add" data-click="crud_action" data-action="editable_table_add_row" style="display: none;"><i class="fa fa-plus"></i></a>
                <a href="" data-rel="del" data-click="crud_action" data-action="editable_table_delete_row" style="display: none;"><i style="color: red;" class="fa fa-remove"></i></a>
            </td>
        </tr>
        </tbody>
    </table>
</div>