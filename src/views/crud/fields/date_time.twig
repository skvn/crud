{% include 'crud::crud/fields/label.twig' %}
{% if input.config.readonly %}
   <div class="input-group">{{ input.getValue()|date(input.config.format) }}</div>
{% else %}
   <div data-widget="crud_datetime" data-type="date_time" class="input-group date_time"  data-format="{{ input.config.jsformat }}">
      <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" {{ input.config.required ? 'required' }}  name="{{ input.field }}"  value="{{ input.getValue()|date(input.config.format) }}"  data-default="{{ input.config.default }}">
   </div>
{% endif %}
