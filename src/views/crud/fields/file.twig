{% include 'crud::crud/fields/label.twig' %}
<div class="row">
    <div class="col-md-8">
        <input {{ input.config.extra|raw }} class="form-control" {{ (input.config.required and  not input.model.getAttribute(input.field)) ? 'required' }} name="{{ input.name }}" type="file" />
    </div>

    {% if input.getValue() %}
    <div class="col-md-4">
        <a class="label label-primary" href="{{ input.getValue().getAttribute('download_link') }}" target="_blank"><i class="fa fa-paperclip"></i> {{ input.getValue().getAttribute('file_name') }} ({{ input.getValue().getAttribute('file_size')|readable_filesize}})</a><br />
        <a class="label label-danger" href="delete_attached_model" data-model="{{ input.model.classViewName }}" data-id="{{ input.model.getKey() }}" data-confirm="{{ trans('crud::messages.really_delete') }}?" data-args='{"delete_attach_rel":"{{ input.name }}" }' data-callback="elem.parent().remove();" data-click="crud_action" data-action="crud_command"><i class="fa fa-times-circle"></i> {{ trans('crud::messages.delete') }} {{ trans('crud::messages.file') }}</a>
    </div>
    {% endif %}
</div>