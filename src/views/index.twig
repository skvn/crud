{% extends "crud::page.twig" %}

{% block head %}
    <link href="{{ 'css/plugins/dataTables/jquery.dataTables.min.css'|asset }}" rel="stylesheet">
    <link href="{{ 'css/plugins/dataTables/dataTables.bootstrap.css'|asset }}" rel="stylesheet">
{% endblock %}
{% block content %}

    {{ widgets.filters(crudObj) }}


    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-content">

                {%  if crudObj.isTree() %}
                    {{ widgets.tree(crudObj) }}
                {%  else  %}

                    {{ widgets.table(crudObj) }}

                {% endif %}

            </div>
        </div>
    </div>



{% endblock %}

{% block modals %}
{% endblock %}

{% block bc %}
    <div class="navbar-header">
        <button type="button" class="navbar-expand-toggle">
            <i class="fa fa-bars icon"></i>
        </button>
        <ol class="breadcrumb navbar-breadcrumb">
            {% for bc in crudObj.config.get('bc')%}
                <li>
                    <a href="{{ bc.href }}">{{ bc.title }}</a>
                </li>
            {% endfor %}
            <li class="active">{{ crudObj.config.getList('title') }}</li>
        </ol>
        <button type="button" class="navbar-right-expand-toggle pull-right visible-xs">
            <i class="fa fa-th icon"></i>
        </button>
    </div>
{% endblock %}


{% block title_right  %}
    <a  class="btn btn-primary pull-right"  data-id='-1'  data-ref="{{ crudObj.classViewName }}_{{ crudObj.config.scope }}" data-click='crud_event' data-event='crud.edit_element' >Добавить {{ crudObj.config.get('ent_name_v') }}</a>
{% endblock %}
