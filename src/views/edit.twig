{% set COL_WIDTH = 10 %}
<div class="modal-dialog  {% if crudObj.config.get('dialog_class') %} {{ crudObj.config.get('dialog_class') }} {% endif %}" {{ crudObj.config.get('dialog_width') ? ('style="width: '~crudObj.config.get('dialog_width')~'px;"')|raw }}>
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">{{ trans('crud::messages.edit') }} {{ crudObj.config.get('ent_name_r') }}</h4>
        </div>

        <div class="modal-body">
            {% if form_tabbed %}
                    {% include 'crud::crud/form_tabbed.twig' %}
                {% else %}
                    {% include 'crud::crud/form.twig' %}
            {% endif %}
        </div>
    </div>
