<ul class="nav navbar-nav navbar-primary">
    {% for m in cmsHelper.getAdminMenu() %}
    {%  if not m.kids %}
    <li  {{ m.active?"class='active'"}}>
        <a href="{{ route(m.route.name,m.route.args) }}">{{ m.title }}</a>
    </li>
    {%  else  %}
        <li  class="menu-item  dropdown  {{ m.active?"active"}}">
            {%  if m.route.name %}
            <a href="{{ route(m.route.name,m.route.args) }}"  class="dropdown-toggle" data-toggle="dropdown">{{ m.title }}
            <b class="caret"></b></a>
            {% else  %}
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ m.title }} <b class="caret"></b></a>
            {% endif %}
            <ul class="dropdown-menu">
                {%  for kid in m.kids %}
                <li  class="menu-item {{ kid.active? 'active'}}"><a href="{{ route(kid.route.name,kid.route.args) }}"> {% if kid.active %}<i class="fa fa-arrow-circle-o-right"></i> {% endif %}{{ kid.title }}</a></li>
                {% endfor %}
            </ul>
        </li>
    {% endif %}
    {%  endfor %}

</ul>

