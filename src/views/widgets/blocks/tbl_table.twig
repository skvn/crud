{% if crudObj.getTreeConfig('use_list') %}
<ol class="breadcrumb">
    {% for bc in crudObj.breadcrumbs %}
        <li>
            {% if loop.last %}
                {{ bc.title }}
            {% else %}
                <a href="{{ bc.link }}">{{ bc.title }}</a>
            {% endif %}
        </li>
    {% endfor %}
</ol>
{% endif %}


<table class="table table-striped table-bordered table-hover"
       data-list_uri_params="{{ crudObj.flat_tree_uri_params }}"
       data-list_table_ref="{{ crudObj.classViewName }}_{{ crudObj.scope }}"
       data-crud_table="{{ crudObj.classViewName }}"
       data-crud_scope="{{ crudObj.scope }}"
       data-crud_noedit="{{ not crudObj.getList().getParam('buttons.single_edit') }}"
       data-btn_edit="{{ crudObj.getList().getParam('buttons.single_edit') }}"
       data-btn_delete="{{ crudObj.getList().getParam('buttons.single_delete') }}"
       data-form_type="{{ crudObj.scopeParam('edit_tab')?'tabs':'popup' }}"
       data-list_type="{{ crudObj.scopeParam('type')?crudObj.scopeParam('type'):'dt' }}"
       data-list_single_actions='{{ crudObj.getList().getParam('list_single_actions')|json_encode|raw }}'
       data-searchable="{{ crudObj.getList().getParam('searchable') }}"
       data-key_name="{{ crudObj.getKeyName() }}"
       {{ crudObj.isTree()?('data-parent_id="'~crudObj.getColumnTreePid()~'"')|raw }}

>
    <thead>
    {% for c in crudObj.getList().getColumns() %}
        {% if not c.invisible %}
        <th {{ c.width ? ('width="'~c.width~'px"')|raw }}
                data-list_ctype="{{ c.ctype }}"
                data-list_orderable="{{ c.orderable }}"
                data-list_data="{{ c.data }}"
                data-list_name="{{ c.name }}"
                {{ c.default_order ? ('data-default_order="'~c.default_order~'"')|raw }}>{{ c.title }} {% if c.hint %}{{ config_get('crud_tooltip.pattern')|replace({'%s': c.hint.index, '%t': c.hint.default})|raw }}{% endif %}</th>
        {% endif %}
    {% endfor %}
    </thead>
    <tfoot>
    </tfoot>


</table>
